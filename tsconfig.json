{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir":"./dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "diagnostics": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}