.form-group.row.align-items-center
    h5.col-3.text-success Add Question
    .data
        pre.mt-3.p-1.text-center.border.rounded
            code(json).mx-auto
                |  fname: 'addQuestion'
p Agregar pregunta
p Nota:
ul
    li "module" : número de módulo en String ("0", "1", "2", ...)
    li "block" : número de bloque en String ("0", "1", "2", ...)
    li "section" : número de la sección en String ("0", "1", "2", ...)
    li "question" : Contenido de la pregunta
    li "id_teacher" : id del Docente o Docente Directivo
    li "rol" : rol del responsable (psicólogo, gestor o asesor)
br
br
.row.justify-content-center.mt-2
    .col.mx-2
        p.lead Body(JSON)
        div(style="height: 13rem" class=" bg-light rounded border")
            .data
                pre.p-2
                    code(json)
                        |{
                        |     fname<span class="text-danger">*</span>: 'addQuestion',
                        |     module<span class="text-danger">*</span>: String,
                        |     section<span class="text-danger">*</span>: String,
                        |     block<span class="text-danger">*</span>: String,
                        |     id_teacher<span class="text-danger">*</span>: String,
                        |     question<span class="text-danger">*</span>: String
                        |     rol<span class="text-danger">*</span>: Number
                        | }
    
    .col.mx-2
        p.lead Response(JSON)
        div(style="height: 21rem" class=" bg-light rounded border")
            .data
                pre.p-2 
                    code(json)
                        |{
                        |     message:"question added successfully",
                        |     question: {
                        |         _id: String,
                        |         idModule: String,
                        |         question: String,
                        |         block: String,
                        |         module: String,
                        |         section: String,
                        |         rol: Number,
                        |         askedBy: String,
                        |         createdAt: Date,
                        |         updatedAt: Date,
                        |     }
                        |  }
